<div class="col-md-12 col-xs-md-12 col-sm-12 default-balance">
   <div class="col-md-6 col-sm-8 col-xs-12 col-md-offset-3 col-sm-offset-2">
       <h3 class="text-center">サインアップ</h3>
        <%= form_for(@user)do |f|%>
            <div class="form_group">
                <%= f.label :name, '名前' %>
                <%= f.text_field :name,class:'form-control default-bottom-form'%>
            </div>
            
            <div class="form_group">
                <%= f.label :email, 'メールアドレス'%>
                <%= f.email_field :email,class:'form-control default-bottom-form'%>
            </div>
            
            <div class="form-group">
                <%= f.label :password,'パスワード'%>
                <%= f.password_field :password,class:"form-control default-bottom-form"%>
            </div>
            
            <div class="form-group">
                <%= f.label :password_confirmation,'Confirmation'%>
                <%= f.password_field :password_confirmation,class:"form-control default-bottom-form"%>
            </div>
            
            <%= f.submit '新規登録',class:"btn default-button col-md-8 col-sm-10 col-xs-12 col-md-offset-2 col-sm-offset-1"%>
        <% end %>
    </div>
</div>