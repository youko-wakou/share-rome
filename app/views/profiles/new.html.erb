<div class="col-md-12 col-sm-12 col-xs-12 default-balance">
    <div class="col-md-6 col-sm-8 col-xs-12 col-md-offset-3 col-sm-offset-2">
        <h3 class="text-center">プロフィール情報の設定</h3>
        <% if Profile.find_by(user_id: current_user.id).blank? %>
            <%= form_for(@profile)do |f| %>
                <div class="form-group">
                    <%= f.label :homepage,'ホームページ'%>
                    <%= f.text_field :homepage,:class => 'form-control' %>
                </div>
                
                <div class="form-group">
                   <%= f.label :twitter,'ツイッターID' %>
                    <%= f.text_field :twitter,:class => 'form-control' %>
                </div>
                
                <div class="form-group">
                    <%= f.label :content,'説明'%>
                    <%= f.text_area :content,:class => 'form-control' %>
                </div>
                
                <%= f.hidden_field :user_id,:value =>current_user.id %>
                <div>
                    <%= f.submit '送信',:class => 'center-block default-button btn-lg'%>
                </div>
            <% end %>
        <% else %>
            <%= render :file => 'profiles/_update_profile'%>
        <% end %>
    </div>
</div>