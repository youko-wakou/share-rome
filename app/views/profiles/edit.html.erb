<div class="col-md-12 col-sm-12 col-xs-12 default-balance">
    <div class="col-md-6 col-sm-8 col-xs-12 col-md-offset-3 col-sm-offset-2">
        <div class="form-default-balance">
           <h3 class="text-center">プロフィール情報の更新</h3>
        </div>
        <%= form_for (@profile_info) do |f| %>
            <% current_user.name %>
            <%= f.label :twitter, 'twitter' %>
            <%= f.text_field :twitter,value: @profile_info.twitter,:class => 'form-control' %>
            
            <%= f.label :homepage, 'ホームページ' %>
            <%= f.text_field :homepage,value: @profile_info.homepage,:class => 'form-control' %>
            
            <%= f.label :content,'説明' %>
            <%= f.text_area :content,value: @profile_info.content,:class => 'form-control' %>
            <div>
                <%= f.submit '送信',:class => 'btn-lg default-button center-block form-default-balance'%>
            </div>
        <% end %>
    </div>
</div>