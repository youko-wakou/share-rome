
<%= topic_id %>
<% @message_user.each do |message|%>
<div style="border:solid 1px">
    <% user = User.find(message.user_id)%>
    <div><%= message.created_at %></div>
    <div>
        <%= user.name %>
    </div>
    <div>
        <%= message.message %>
    </div>
    <!--ここからファイル処理-->
    <div>
    <%= name_list = message.file_name.split(',') %>
    <%= name_list.length %>
    <% name_list.each do |name| %>
        <%= name %><br>
    <% end %>
    
    <%= status_list = message.status.delete('[]" ').split(',') %>
    <% status_list.each do |status|%>
    <%if status == "image/bmp"|| status == "image/jpeg"||status =="image/png" %>
        <div>画像</div>
    <% elsif status == "text/plain" %>
        <div>テキスト</div>
    <% elsif status == "audio/mp3"%>
        <div>音楽</div>
    <% elsif status == "video/mp4"%>
        <div>動画</div>
    <% elsif status == "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"%>
        <div>エクセル</div>
    <% elsif status =="application/vnd.openxmlformats-officedocument.presentationml.presentation"%>
        <div>パワーポイント</div>
    <% elsif status == "application/vnd.openxmlformats-officedocument.wordprocessingml.document"%>
        <div>ワード</div>
    <% else %>
    　   <div>それ以外</div>
    <% end %>
        <%= status %><br>
    <% end %>
    </div>
    <div><%= link_to 'ダウンロード.zip',download_message_path(message.id,topic_id: topic_id) %></div>
    <div><%= button_to "削除",:action => 'destroy',:controller => 'messages',params:{id: message.id},method: :delete %></div>
</div>

<% end %>