<div class="col-md-12 col-sm-12 col-xs-12 default-balance">
    <div class="col-md-6 col-sm-8 col-xs-12 col-md-offset-3 col-sm-offset-2 border-box">
        <% if current_user.photo.blank? %>
            <%= button_to '画像をアップロード',new_photo_path,:class => 'default-button btn btn-lg center-block form-default-balance' %>
            <div class="col-md-6 col-sm-6 col-xs-10 col-md-offset-3 col-sm-offset-3 col-xs-offset-1 form-default-balance"id="prof-img-box">
                <%= image_tag "nothing-image.png" %>
            </div>
        <% else %>
            <div class="col-md-6 col-sm-6 col-xs-10 col-md-offset-3 col-sm-offset-3 col-xs-offset-1 form-default-balance"id="prof-img-box">
                <%= image_tag current_user.photo.image_url.to_s %>
            </div>
            <div class="clear"></div>
            <div>
               <%= button_to '画像の更新',edit_photo_path(current_user.photo),:class => 'default-button btn btn-lg center-block form-default-balance' %>
            </div>
        
        <% end %>
    </div>
</div>